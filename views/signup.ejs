<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="./utils/togglePass.js"></script>
</head>
<body class="bg-light">
<div class="container mt-5">
    <h3 class="text-center mb-3">Create Account</h3>
    <form action="/signup" method="POST" class="card p-4 shadow">
        <input class="form-control mb-3" type="text" name="username" required placeholder="Full Name">
        <input class="form-control mb-3" type="email" name="email" required placeholder="Email">
        <div class="input-group mb-3">
            <input class="form-control mb-3" type="password" name="password" required placeholder="Password">
        <button type="button" class="input-group-text" onclick="togglePass('pass')" style="cursor:pointer;">
            <i id="eyeIcon" class="bi bi-eye"></i>
        </button>
        </div>
        <button class="btn btn-primary">Sign Up</button>
        <p class="mt-2 text-center"><a href="/login">Already have an account? Login</a></p>
    </form>
</div>

<script>
function togglePass(inputId){
    const input = document.getElementById(inputId);

    if (!input) return;

    if(input.type === "password"){
        input.type = "text";
    } else {
        input.type = "password";
    }
}
</script>

</body>
</html>
